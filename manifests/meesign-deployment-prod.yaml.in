apiVersion: apps/v1
kind: Deployment
metadata:
  name: meesign-deployment
  labels:
    app: meesign
spec:
  replicas: 1 # as the server is not stateless, we must operate on a single instance
  selector:
    matchLabels:
      app: meesign
  template:
    metadata:
      labels:
        app: meesign
    spec:
      volumes:
      - name: secret-volume
        secret:
          secretName: private-key
      terminationGracePeriodSeconds: 30
      containers:
      - name: meesign
        image: ${IMAGE_TO_DEPLOY}
        imagePullPolicy: "Always"
        ports:
        - containerPort: 1337
        volumeMounts:
        - name: secret-volume
          readOnly: true
          mountPath: "/meesign/keys/"